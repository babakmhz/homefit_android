<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/service_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:layout_marginTop="@dimen/main_act_main_title_margin_top"
    android:layout_marginBottom="@dimen/main_act_main_title_margin_top"
    android:animateLayoutChanges="true"
    android:background="#eee"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_service"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:src="@drawable/ic_pipeline" />

            <View
                android:id="@+id/view_dark_indicator"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignBottom="@+id/image_service"
                android:layout_marginBottom="0dp"
                android:alpha="0.9"
                android:animateLayoutChanges="true"
                android:background="@drawable/selector_view_dark_indicator_background"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/selected_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_service_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="#000"
            android:textStyle="bold"
            tools:text="title" />

        <TextView
            android:id="@+id/text_service_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textStyle="italic"
            tools:text="20$" />
    </LinearLayout>


</android.support.v7.widget.CardView>