<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|top"
    android:layout_marginStart="@dimen/main_act_main_title_default_margin_start"
    android:layout_marginEnd="@dimen/main_act_main_title_default_margin_start"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".Ui.Main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_writing" />

        <TextView
            android:id="@+id/text_description_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="5dp"
            android:text="@string/description"
            android:textSize="17sp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="5dp"
            android:text="@string/optional"
            android:textSize="17sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_current_description_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <TextView
                android:id="@+id/text_description_max_length_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/editText_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="5dp"
        android:layout_marginTop="@dimen/main_act_main_title_margin_top"

        android:layout_marginBottom="@dimen/standard_margin_bottom_on_main_activity"
        android:background="@drawable/selector_edit_text_description"
        android:elevation="@dimen/standard_elevation"
        android:gravity="top"
        android:hint="@string/enter_description_of_service_you_are_looking_for"
        android:maxLength="250"
        android:padding="20dp"
        android:textAlignment="center"
        android:textSize="15sp" />


</LinearLayout>
