<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Ui.Main.MainActivity"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_bannerslider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:background="@drawable/selector_round_imageview_card"
        app:cardCornerRadius="@dimen/card_corner_standard"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/image_bannerslider"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee_making_app" />
    </android.support.v7.widget.CardView>
</LinearLayout>